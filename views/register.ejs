    </table>
</div>
<div id="signup" style="text-align:center;">
    <form method="post" action="/register">
        <fieldset class="basicinfo">
            <table>
                <tr>
                    <td><label for="name">Team Name:</label></td>
                    <td><input class="text" type="text" value="" name="name"/></td>
                </tr>
                <tr>
                    <td><label for="password">Password: </label></td>
                    <td><input class="text" type="password" value="" name="password"/></td>
                </tr>
                <tr>
                    <td><label for="confirmpass">Confirm Password: </label></td>
                    <td><input class="text" type="password" value="" name="confirmpassword"/></td>
                </tr>
            </table>
        </fieldset>
        <fieldset class="contactinfo">
            <label>E-Mail: </label><input class="text" type="email" value="" name="email"/>
            <label>Phone No:</label> <input class="tel" type="text" value="" name="phone"/>
        </fieldset>
        <!--Will Insert Captcha elements later -->
        <img class="ieee" src="/images/ieeecs%20logo.gif"/>
        <fieldset class="captcha">
            <label for="captcha"><img src="/images/samplecaptcha.jpg"/></label><br/>
            <input type="text" value="captcha" name="captcha"/>
            <!-- captcha needs backend-->
        </fieldset>
        <fieldset class="tc">
            <label>By registering with us, you agree that you have read and agree to our Terms and Conditions and
                Privacy Policy.</label>
        </fieldset>
        <br/>
        <button type="submit" value="Submit">Submit</button>
    </form>

</div>


<footer id="footer" style="top:7em;"><p>IEEE CS</p></footer>
