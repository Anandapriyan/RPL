                        </div>
                        <div class="small-4 large-4 columns">
                            <input type="text" id="pno" placeholder="Mobile Number" name="mob1"/>
                        </div>
                        <div class="small-2 large-2 columns">
                            <label for="text" class="right inline" style="color:white;">Mobile 2:</label>
                        </div>
                        <div class="small-4 large-4 columns">
                            <input type="text" id="pno2" placeholder="Mobile Manager" name="mob2"/>
                        </div>
                    </div>
                </div>
                <!-- phone -->


